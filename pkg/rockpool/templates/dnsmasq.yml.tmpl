---
apiVersion: v1
kind: Service
metadata:
  name: dnsmasq
  labels:
    app.kubernetes.io/managed-by: Rockpool
    app.kubernetes.io/instance: rockpool-dnsmasq
    app.kubernetes.io/name: dnsmasq
spec:
  type: LoadBalancer
  ports:
    - name: dns
      protocol: UDP
      port: 6153
      targetPort: 53
  selector:
    app.kubernetes.io/instance: rockpool-dnsmasq
    app.kubernetes.io/name: dnsmasq

---
apiVersion: v1
kind: Service
metadata:
  name: dnsmasq-tcp
  labels:
    app.kubernetes.io/managed-by: Rockpool
    app.kubernetes.io/instance: rockpool-dnsmasq
    app.kubernetes.io/name: dnsmasq
spec:
  type: LoadBalancer
  ports:
    - name: dns-tcp
      targetPort: 53
      protocol: TCP
      port: 6153
  selector:
    app.kubernetes.io/instance: rockpool-dnsmasq
    app.kubernetes.io/name: dnsmasq

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: dnsmasq
  labels:
    app.kubernetes.io/managed-by: Rockpool
    app.kubernetes.io/instance: rockpool-dnsmasq
    app.kubernetes.io/name: dnsmasq
spec:
  selector:
    matchLabels:
      app.kubernetes.io/instance: rockpool-dnsmasq
      app.kubernetes.io/name: dnsmasq
  template:
    metadata:
      labels:
        app.kubernetes.io/instance: rockpool-dnsmasq
        app.kubernetes.io/name: dnsmasq
    spec:
      containers:
      - name: dnsmasq
        image: pygmystack/dnsmasq:latest
        args: ["--log-facility=-", "-A", "/{{ .Hostname }}/127.0.0.1"]
        ports:
        - containerPort: 53
          name: dns
          protocol: UDP
        - containerPort: 53
          name: dns-tcp
          protocol: TCP
