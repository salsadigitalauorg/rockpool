imageTag: v2.5.0

{{- if eq .Arch "arm64" }}
dockerHost:
  image:
    repository: ghcr.io/yusufhm/rockpool/lagoon/docker-host
  registry: harbor.lagoon.{{ .Hostname }}
{{- end }}

lagoon-build-deploy:
  enabled: true
  extraArgs:
    - "--enable-harbor=true"
    - "--harbor-url=https://harbor.lagoon.{{ .Hostname }}"
    - "--harbor-api=https://harbor.lagoon.{{ .Hostname }}/api/"
    - "--harbor-username=admin"
    - "--harbor-password=pass"
  rabbitMQUsername: lagoon
  rabbitMQPassword: {{ .RabbitMQPassword }}
  rabbitMQHostname: broker.lagoon.{{ .Hostname }}
  lagoonTargetName: {{ .Name }}{{ .TargetId}}
  taskSSHHost: ssh.lagoon.{{ .Hostname }}
  taskSSHPort: "22"
  taskAPIHost: "api.lagoon.{{ .Hostname }}"

dbaas-operator:
  enabled: false

  mariadbProviders:
    production:
      environment: production
      hostname: 172.17.0.1.nip.io
      readReplicaHostnames:
      - 172.17.0.1.nip.io
      password: password
      port: '3306'
      user: root

    development:
      environment: development
      hostname: 172.17.0.1.nip.io
      readReplicaHostnames:
      - 172.17.0.1.nip.io
      password: password
      port: '3306'
      user: root
