apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  annotations:
    kubernetes.io/ingress.class: nginx
  name: mailhog
  labels:
    app.kubernetes.io/managed-by: Rockpool
    app.kubernetes.io/instance: rockpool-mailhog
    app.kubernetes.io/name: mailhog
spec:
  rules:
    - host: mailhog.{{ .LagoonBaseUrl }}
      http:
        paths:
          - backend:
              service:
                name: mailhog
                port:
                  number: 8025
            path: /
            pathType: Prefix

---
apiVersion: v1
kind: Service
metadata:
  name: mailhog
  labels:
    app.kubernetes.io/managed-by: Rockpool
    app.kubernetes.io/instance: rockpool-mailhog
    app.kubernetes.io/name: mailhog
spec:
  ports:
    - name: http
      port: 8025
    - name: smtp
      port: 1025
  selector:
    app.kubernetes.io/instance: rockpool-mailhog
    app.kubernetes.io/name: mailhog

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mailhog
  labels:
    app.kubernetes.io/managed-by: Rockpool
    app.kubernetes.io/instance: rockpool-mailhog
    app.kubernetes.io/name: mailhog
spec:
  selector:
    matchLabels:
      app.kubernetes.io/instance: rockpool-mailhog
      app.kubernetes.io/name: mailhog
  template:
    metadata:
      labels:
        app.kubernetes.io/instance: rockpool-mailhog
        app.kubernetes.io/name: mailhog
    spec:
      containers:
      - name: mailhog
        image: ajoergensen/mailhog:latest
        ports:
          - containerPort: 8025
          - containerPort: 1025
