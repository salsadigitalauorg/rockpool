apiVersion: networking.k8s.io/v1beta1
kind: Ingress
metadata:
  annotations:
    kubernetes.io/ingress.class: nginx
  name: mailhog
  namespace: default
spec:
  rules:
    - host: mailhog.{{ .LagoonBaseUrl }}
      http:
        paths:
          - backend:
              serviceName: mailhog
              servicePort: 8025
            path: /

---
apiVersion: v1
kind: Service
metadata:
  name: mailhog
  namespace: default
spec:
  ports:
    - port: 8025
  selector:
    app: mailhog

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: mailhog
spec:
  selector:
    matchLabels:
      app: mailhog
  template:
    metadata:
      labels:
        app: mailhog
    spec:
      containers:
      - name: mailhog
        image: ajoergensen/mailhog:latest
        ports:
          - containerPort: 8025
